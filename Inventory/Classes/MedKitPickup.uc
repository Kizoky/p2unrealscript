//
///////////////////////////////////////////////////////////////////////////////

class MedKitPickup extends OwnedPickup;


var() float HealingPct;	// Percentage of how much health you add

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
// Pickup.. add the health
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
auto state Pickup
{	
	function Touch( actor Other )
	{
		local P2Pawn CheckPawn;
			
		if ( ValidTouch(Other) ) 
		{	
			CheckPawn = P2Pawn(Other);	
			if(CheckPawn.AddHealthPct(HealingPct))
			{
				AnnouncePickup(CheckPawn);
			}
		}
	}
}

///////////////////////////////////////////////////////////////////////////////
// Default properties
///////////////////////////////////////////////////////////////////////////////
defaultproperties
	{
	HealingPct=30
	PickupMessage="You used a Medkit."
	DrawType=DT_StaticMesh
	StaticMesh=StaticMesh'stuff.stuff1.MedKit'
	bPaidFor=true
	bAllowMovement=false
	MaxDesireability = 0.7
	}
