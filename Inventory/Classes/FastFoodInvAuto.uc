//
// Medical kit, gives you health back
//
// Doesn't use RateHealingPower with the QuickHealth becuase you don't have
// these in your inventory long enough to mess with them.
//
///////////////////////////////////////////////////////////////////////////////
class FastFoodInvAuto extends OwnedInv;

///////////////////////////////////////////////////////////////////////////////
// Give him health
///////////////////////////////////////////////////////////////////////////////
function Activate()
{
	local P2Pawn CheckPawn;

	CheckPawn = P2Pawn(Owner);
	CheckPawn.AddHealthPct(class'FastFoodInv'.default.HealingPct);
}

///////////////////////////////////////////////////////////////////////////////
// Default properties
///////////////////////////////////////////////////////////////////////////////

defaultproperties
{
     bPaidFor=True
     bUseUpAutoActivate=True
     bAutoActivate=True
     InventoryGroup=124
     PickupClass=Class'Inventory.FastFoodPickup'
}
