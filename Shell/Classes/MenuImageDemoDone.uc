class MenuImageDemoDone extends MenuImage;


///////////////////////////////////////////////////////////////////////////////
// Vars, structs, consts, enums...
///////////////////////////////////////////////////////////////////////////////

var localized string strExitText;
var ShellMenuChoice	ExitChoice;


///////////////////////////////////////////////////////////////////////////////
// Create menu contents
///////////////////////////////////////////////////////////////////////////////
function CreateMenuContents()
	{
	Super.CreateMenuContents();

	ItemAlign  = TA_Center;
	ExitChoice = AddChoice(strExitText,	"", ItemFont, ItemAlign, false);
	}

///////////////////////////////////////////////////////////////////////////////
// Handle notifications from controls
///////////////////////////////////////////////////////////////////////////////
function Notify(UWindowDialogControl C, byte E)
	{
	Super.Notify(C, E);
	switch(E)
		{
		case DE_Click:
			switch (C)
				{
				case ExitChoice:
					ShellRootWindow(root).QuitCurrentGame();
					break;
				}
			break;
		}
	}

///////////////////////////////////////////////////////////////////////////////
// Default properties
///////////////////////////////////////////////////////////////////////////////
defaultproperties
	{
	TextureImageName = "buyscreen.DemoComplete"

	strExitText = "Return To Menu";

	aregButtons[0]=(X=150,Y=430,W=340,H=45)
	}
