var localized string ControlsTitleText;

///////////////////////////////////////////////////////////////////////////////
// Create menu contents
///////////////////////////////////////////////////////////////////////////////
function CreateMenuContents()
	{
	Super.CreateMenuContents();

	AddTitle(ControlsTitleText, TitleFont, TitleAlign);
	}

