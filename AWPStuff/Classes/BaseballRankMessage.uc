///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
class BaseballRankMessage extends CriticalEventPlus;

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
var localized array<String> HitMessage;

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
static function string GetString(
	PlayerController P,
	optional int Switch,
	optional PlayerReplicationInfo RelatedPRI_1,
	optional PlayerReplicationInfo RelatedPRI_2,
	optional Object OptionalObject
	)
{
	if (Switch <= 45)
		return Default.HitMessage[0];
	if (Switch <= 100)
		return Default.HitMessage[1];
	if (Switch <= 150)
		return Default.HitMessage[2];
	if (Switch <= 300)
		return Default.HitMessage[3];

	return Default.HitMessage[4];
}

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////

defaultproperties
{
     HitMessage(0)="Infield out!"
     HitMessage(1)="Base hit!"
     HitMessage(2)="It's a double!"
     HitMessage(3)="It's a triple!"
     HitMessage(4)="Home run!"
     bIsConsoleMessage=False
}
