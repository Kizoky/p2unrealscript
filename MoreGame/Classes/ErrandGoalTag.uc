class ErrandGoalTag extends ErrandGoal;


///////////////////////////////////////////////////////////////////////////////
// Vars
///////////////////////////////////////////////////////////////////////////////

var () Name		UniqueTag;		// tag we care about


///////////////////////////////////////////////////////////////////////////////
// Check to see if this errand is done
///////////////////////////////////////////////////////////////////////////////
function bool CheckForCompletion(Actor Other, Actor Another, Pawn ActionPawn)
	{
//	Log("ErrandGoalTag.CheckForCompletion("$Other$" tag="$Other.Tag$" uniquetag="$UniqueTag);
	if(Other != None)
		{
		// Check if tag matches
		if (Other.Tag == UniqueTag)
			return true;
		}

	return false;
	}


