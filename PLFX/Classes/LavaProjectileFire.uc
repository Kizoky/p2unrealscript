// Behaves like a FireTorsoEmitter but we don't have a pawn so we need to
// override some stuff.
///////////////////////////////////////////////////////////////////////////////
class LavaProjectileFire extends FireCatEmitter;

///////////////////////////////////////////////////////////////////////////////
// Assign us the pawn we're burning
///////////////////////////////////////////////////////////////////////////////
function SetPawns(FPSPawn CheckP, FPSPawn Doer)
{
	SetupLifetime(default.Lifespan/PLAY_DAMAGE_RATIO);
	Damage = PLAY_DAMAGE_RATIO*default.Damage;
	// Make it go out very quickly if touched by anything
	Health=10;
	Instigator = Doer;
}

///////////////////////////////////////////////////////////////////////////////
// Ignore torso emitter stuff. The projectile will kill us when it's done
///////////////////////////////////////////////////////////////////////////////
event Tick(float dT)
{
	Super(FireEmitter).Tick(dT);
}