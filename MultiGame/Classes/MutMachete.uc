class MutMachete extends Mutator;

///////////////////////////////////////////////////////////////////////////////
// Make all weapons super strong (also, explosions, fire, projectiles, etc)
///////////////////////////////////////////////////////////////////////////////
function bool CheckReplacement(Actor Other, out byte bSuperRelevant)
{
	if(ScissorsPickup(Other) != None)
	{
		ReplaceWith(Other, "AWInventory.MachetePickup");
		Other.LifeSpan = 0.1;
	}

	return true;
}

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
function bool MutatorIsAllowed()
{
	return true;
}

defaultproperties
{
	GroupName="Machete"
	FriendlyName="Machete replaces scissors"
	Description="Changes all scissors pickups to machetes."
}