class MutSledge extends Mutator;

///////////////////////////////////////////////////////////////////////////////
// Make all weapons super strong (also, explosions, fire, projectiles, etc)
///////////////////////////////////////////////////////////////////////////////
function bool CheckReplacement(Actor Other, out byte bSuperRelevant)
{
	if(ShovelPickup(Other) != None)
	{
		ReplaceWith(Other, "AWInventory.SledgePickup");
		Other.LifeSpan = 0.1;
	}

	return true;
}

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
function bool MutatorIsAllowed()
{
	return true;
}

defaultproperties
{
	GroupName="Sledge"
	FriendlyName="Sledge replaces shovel"
	Description="Changes all shovels pickups to sledges."
}