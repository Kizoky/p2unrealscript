class SuperChampHomingProjectile extends MutantChampHomingProjectile;

var() float FuseTime;

///////////////////////////////////////////////////////////////////////////////
// Decide if this pawn passed in is one who either made me, or is friends
// with my maker
///////////////////////////////////////////////////////////////////////////////
simulated function bool RelatedToMe(Pawn CheckMe)
{
	// Ignore our instigator and his hero
	if (CheckMe == Instigator
		|| (Instigator.Controller != None && LambController(Instigator.Controller) != None && LambController(Instigator.Controller).Hero == CheckMe))
		return true;
		
	return false;
}

event Timer()
{
	GenExplosion(Location,Vect(0,0,0),None);
}

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
// Orbit your SeekTarget
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
state Flying
{
	event BeginState()
	{
		Super.BeginState();
		SetTimer(FuseTime, false);
	}
}

defaultproperties
{
    explclass=class'SuperChampFireballExplosion'
    explflyclass=class'SuperChampFireballExplosion'
	FuseTime=10.0
}
